<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEANS 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="traingle" class="com.nik.colletionInitializing.Traingle">
		<property name="points">
			<list>
			<ref bean="p1" />
			<ref bean="p2" />
			<ref bean="p3" />
			</list>
		</property>
	
	
	</bean>
	
	<bean id="p1" class="com.nik.colletionInitializing.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="p2" class="com.nik.colletionInitializing.Point">
		<property name="x" value="0" />
		<property name="y" value="10" />
	</bean>
	
	<bean id="p3" class="com.nik.colletionInitializing.Point">
		<property name="x" value="10" />
		<property name="y" value="10" />
	</bean>

</beans>

